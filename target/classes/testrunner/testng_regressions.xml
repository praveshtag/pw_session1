<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Open Cart Test Regression PW Suite" thread-count = "4" parallel ="tests" verbose="4">

<listeners>
		<listener class-name="com.qa.opencart.listeners.ExtendReportListener" />
</listeners>
	
	<test name="Home Page Test1">
		<parameter name="browser" value="chrome" />
		<classes>
			<class name="com.qa.opencart.tests.HomePageTest" />
		</classes>
	</test> 
	<test name="Login Page Test1">
	<parameter name="browser" value="chromium" />
		<classes>
			<class name="com.qa.opencart.tests.LoginPageTest" />
		</classes>
	</test> 
	<test name="Home Page Test2">
		<parameter name="browser" value="edge" />
		<classes>
			<class name="com.qa.opencart.tests.HomePageTest" />
		</classes>
	</test> 
	<test name="Login Page Test2">
	<parameter name="browser" value="safari" />
		<classes>
			<class name="com.qa.opencart.tests.LoginPageTest" />
		</classes>
	</test> 
	
</suite>